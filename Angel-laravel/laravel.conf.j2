<VirtualHost *:80>
    ServerName {{ server_ip }}
    ServerAdmin admin@example.com
    DocumentRoot {{ doc_root }}/public

    <Directory {{ doc_root }}>
        AllowOverride All
        Require all granted
    </Directory>

    ErrorLog ${APACHE_LOG_DIR}/error.log
    CustomLog ${APACHE_LOG_DIR}/access.log combined
</VirtualHost>
